@model IEnumerable<ECommerce.Models.City>

@{
    ViewBag.Title = "Ciudades";
    ViewBag.Description = "Listado de Ciudades";
}

<div class="col-lg-12">
    <div class="box box-success">
        <div class="box-header">
            <h4 class="box-title">
                @ViewBag.Description.
                @Html.ActionLink("Crear Ciudad", "Create", new { }, new { @class = "btn btn-primary" })
            </h4>
        </div>
        <div class="box-body">
            <table class="table">
                <tr>                    
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Department.Name)
                    </th>
                    <th>Opciones</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>                        
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Department.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.CityId }, new { @class = "btn btn-warning" })
                            @Html.ActionLink("Detalles", "Details", new { id = item.CityId }, new { @class = "btn btn-info" }) 
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.CityId }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>



