@using WebHelpers.Mvc5

<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="../../dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>Alexander Pierce</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        <!-- search form -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">MENÚ PRINCIPAL</li>
            <li class="@Url.IsLinkActive("Index","Home")">
                <a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> <span>Inicio</span></a>
            </li>
            <li class="@Url.IsLinkActive("Contact","Home")">
                <a href="@Url.Action("Contact","Home")"><i class="fa fa-phone"></i> <span>Contáctenos</span></a>
            </li>
            <li class="@Url.IsLinkActive("About","Home")">
                <a href="@Url.Action("About","Home")"><i class="fa fa-question"></i> <span>Acerca de</span></a>
            </li>
            <li class="@Url.IsLinkActive("Index","Cities")">
                <a href="@Url.Action("Index","Cities")"><i class="fa fa-building"></i> <span>Ciudades</span></a>
            </li>
            <li class="@Url.IsLinkActive("Index","Companies")">
                <a href="@Url.Action("Index","Companies")"><i class="fa fa-building-o"></i> <span>Compañías</span></a>
            </li>
            <li class="@Url.IsLinkActive("Index","Departments")">
                <a href="@Url.Action("Index","Departments")"><i class="fa fa-globe"></i> <span>Departamentos</span></a>
            </li>


        </ul>
    </section>
    <!-- /.sidebar -->
</aside>

