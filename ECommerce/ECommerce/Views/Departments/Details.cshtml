@model ECommerce.Models.Department

@{
    ViewBag.Title = "Departamentos";
    ViewBag.Description = "Detalles del Departamento";
}

<div class="col-lg-12">
    <div class="box box-info">
        <div class="box-header">
            <h4 class="box-title">
                @ViewBag.Description
            </h4>
        </div>
        <div class="box-body">            
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

            </dl>
        </div>
        <div class="box-footer">
            @Html.ActionLink("Editar", "Edit", new { id = Model.DepartmentId }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Regresar", "Index", new { }, new { @class = "btn btn-success" })
        </div>
    </div>
</div>

