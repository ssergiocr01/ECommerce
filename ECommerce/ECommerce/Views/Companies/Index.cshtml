@model IEnumerable<ECommerce.Models.Company>

@{
    ViewBag.Title = "Compañías";
    ViewBag.Description = "Listado de Compañías";
}

<div class="col-lg-12">
    <div class="box box-success">
        <div class="box-header">
            <h4 class="box-title">
                @ViewBag.Description.
                @Html.ActionLink("Crear Compañía", "Create", new { }, new { @class = "btn btn-primary" })
            </h4>
        </div>
        <div class="box-body">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.City.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Department.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Logo)
                    </th>
                    <th>Opciones</th>
                </tr>

                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.City.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Logo)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.CompanyId }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Detalles", "Details", new { id = item.CompanyId }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.CompanyId }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
                }

            </table>
        </div>
    </div>
</div>



