@model ECommerce.Models.City

@{
    ViewBag.Title = "Ciudades";
    ViewBag.Description = "Eliminar Ciudad";
}

<div class="col-lg-12">
    <div class="box box-danger">
        <div class="box-header">
            <h4 class="box-title">
                @ViewBag.Description.
            </h4>            
        </div>
        <div class="box-body">
            <p>
                <span class="callout callout-danger">¿Está seguro(a) de querer eliminar este registro?</span>
            </p>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Department.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Department.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="box-footer">
                    <div class="form-actions no-color">
                        <input type="submit" value="Eliminar" class="btn btn-danger" />
                        @Html.ActionLink("Regresar", "Index", new { }, new { @class = "btn btn-success" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>

